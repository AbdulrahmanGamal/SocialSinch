<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parse.sinch.social">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.SocialSinchApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:theme="@style/SocialSinchTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Sinch Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CallingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MessagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SocialSinchTheme"/>
        <activity
            android:name=".RedesignMessagesActivity2"
            android:screenOrientation="portrait"
            android:theme="@style/SocialSinchTheme"/>
        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/SocialSinchTheme"/>
        <activity android:name=".TenorGridActivity"/>
    </application>

</manifest>