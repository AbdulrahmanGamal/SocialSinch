<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.social.valgoodchat.viewmodel.UserCallsItemViewModel" />
    </data>

    <RelativeLayout android:id="@+id/userElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel.onClickUserCall()}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_panel"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/imgUser"
            android:layout_toEndOf="@+id/imgUser">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textColor="@color/darker_grey"
                android:textStyle="bold"
                android:text="@{viewModel.fullName}"/>

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/lastMessageDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="13sp"
                app:emojiSize="13sp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textColor="@color/soft_grey"
                android:text="@{viewModel.lastMessageDate}"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/contact_profile_pic_list_width"
            android:layout_height="@dimen/contact_profile_pic_list_height"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/contact_profile_pic_margin_top"
            android:layout_marginStart="@dimen/contact_profile_pic_margin_start"
            android:layout_gravity="center_horizontal"
            app:avatarUrl="@{viewModel.userAvatar}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/name_panel"
            android:layout_toEndOf="@+id/imgUser"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/user_reply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@{viewModel}"/>

            <TextView
                android:id="@+id/txtSubtitled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_grey"
                android:text="@{viewModel.lastMessage}"/>

        </LinearLayout>
    </RelativeLayout>
</layout>