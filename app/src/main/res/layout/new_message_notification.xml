<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/userElement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_panel"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/notification_icon_panel"
        android:layout_toEndOf="@+id/notification_icon_panel">

        <TextView
            android:id="@+id/notification_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:textColor="@color/darker_grey"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/notification_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="13sp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:textColor="@color/soft_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/contact_profile_pic_list_width"
        android:layout_height="@dimen/contact_profile_pic_list_height"
        android:layout_alignParentTop="true"
        android:id="@+id/notification_icon_panel"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/contact_profile_pic_margin_start"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/name_panel"
        android:layout_toEndOf="@+id/notification_icon_panel"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/light_grey"/>

    </LinearLayout>
</RelativeLayout>